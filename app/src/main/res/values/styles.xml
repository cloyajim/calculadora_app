<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--layouts-->
    <style name="MyLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/common_padding_min</item>
        <!--constrains-->
        <item name="layout_constraintDimensionRatio">H, 4:1</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--textViews-->
    <style name="MyTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/common_padding_min</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:background">?colorSurface</item>
        <!--constrains-->
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--Botones-->
    <style name="MyButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:textSize">@dimen/calc_btn_text_size</item>
        <item name="android:layout_marginStart">@dimen/common_padding_min</item>
        <item name="android:onClick">onClickButton</item>
    </style>

    <!--Botones numericos-->
    <style name="ButtonNumeric" parent="MyButtonBase">
        <item name="android:backgroundTint">@color/blue_900</item>
    </style>

    <!--botones operadores-->
    <style name="ButtonOperator" parent="MyButtonBase">
        <item name="android:backgroundTint">@color/blue_800</item>
    </style>
    
    <!--Boton secundario igual-->
    <style name="ButtonSecondaryEqual" parent="MyButtonBase">
        <item name="android:layout_weight">50</item>
        <item name="android:backgroundTint">@color/blue_800</item>
    </style>

    <!--Boton secundario clear-->
    <style name="ButtonSecondaryClear" parent="MyButtonBase">
        <item name="android:layout_weight">50</item>
        <item name="android:backgroundTint">@color/green_800</item>
    </style>

<!--Boton secundario delete-->
    <style name="ButtonSecondaryDelete" parent="MyButtonBase">
        <item name="android:backgroundTint">@color/red_800</item>
    </style>

</resources>